{
	"name": "Crunchyroll iFrame Player",
	"version": "1.1.0",
	"description": "Permite ver todos os v√≠deos do crunchyroll gratuitamente.",
	"author": "itallolegal",
	"icons": { "48": "icon.png" },
	"browser_action":{
		"default_title": "Crunchyroll iFrame Player",
		"default_popup": "popup.html",
		"default_icon": "icon.png"
	},
	"permissions": [
    "webRequest", 
    "webRequestBlocking",
    "http://localhost/*",
    "https://pl.crunchyroll.com/*",
    "https://www.crunchyroll.com/*",
    "https://*.mateus7g.github.io/*",
		"storage"
  ],
	"content_scripts": [
    {
      "matches": ["https://*.crunchyroll.com/*"],
      "css": ["content.css"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
	"manifest_version": 2
}